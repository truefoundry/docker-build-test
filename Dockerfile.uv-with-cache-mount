FROM python:3.11.0-slim

WORKDIR /app

COPY ./requirements.txt /app/requirements.txt


RUN --mount=type=cache,target=/root/.cache/pip pip install --cache-dir=/root/.cache/pip uv

RUN --mount=type=cache,target=/root/.cache/pip uv pip install --cache-dir=/root/.cache/pip -r requirements.txt --system

COPY . /app/

EXPOSE 8000

CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "8000"]