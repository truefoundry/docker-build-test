FROM python:3.11.0-slim

WORKDIR /app
ENV UV_LINK_MODE=copy

COPY ./requirements.txt /app/requirements.txt


RUN --mount=type=cache,target=/root/.cache/uv pip install --cache-dir=/root/.cache/uv uv

RUN --mount=type=cache,target=/root/.cache/uv uv pip install --cache-dir=/root/.cache/uv -r requirements.txt --system

COPY . /app/

EXPOSE 8000

CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "8000"]